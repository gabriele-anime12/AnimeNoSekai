    <script>
        // Funzione per mostrare il video dell'episodio selezionato
        const watchButtons = document.querySelectorAll('.watch-button');
        watchButtons.forEach(button => {
            button.addEventListener('click', function(event) {
                event.preventDefault();
                const episodeId = this.getAttribute('href').substring(1);
                
                // Nascondi tutti i video
                const allVideos = document.querySelectorAll('.episode-video');
                allVideos.forEach(video => video.style.display = 'none');
                
                // Mostra il video dell'episodio selezionato
                const selectedVideo = document.getElementById(episodeId);
                selectedVideo.style.display = 'block';
            });
        });
    </script>
